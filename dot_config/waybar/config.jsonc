{
	"layer": "top",
	"modules-left": ["niri/workspaces", "niri/window"],
	// "modules-center": ["niri/window"],
	"modules-center": [
		"cpu",
		"clock",
		"memory"
	],
	"modules-right": [
		"privacy",
		"tray",
		"network",
		"power-profiles-daemon",
		"battery",
		"pulseaudio/slider"
	],
	"sway/window": {
		"max-length": 50
	},
	"battery": {
		"format": "{capacity}% {icon}",
		"full-at": 90,
		"interval": 5,
		"format-icons": [ "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ" ],
